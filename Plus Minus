void plusMinus(vector<int> arr,int n) 
{
    float plus{},minus{},zero{};
    for(int i=0;i<n;i++)
    {
        if(arr.at(i)==0)
        {
            zero++;
        }
        else if(arr.at(i)>0)
        {
            plus++;
        }
        else if(arr.at(i)<0)
        {
            minus++;
        }
    }
    plus=plus/n;
    minus=minus/n;
    zero=zero/n;
    cout<<plus<<endl<<minus<<endl<<zero;
}
